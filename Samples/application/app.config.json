{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Main application configuration schema",
  "type": "object",
  "properties": {
    "application": {
      "type": "object",
      "description": "Core application settings",
      "required": ["name", "version", "features"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Application name"
        },
        "version": {
          "type": "string",
          "description": "Application version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string",
          "description": "Application description"
        },
        "features": {
          "type": "object",
          "description": "Enabled/disabled features",
          "properties": {
            "auth": {
              "type": "boolean",
              "default": true
            },
            "dashboard": {
              "type": "boolean",
              "default": true
            },
            "userManagement": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    },
    "database": {
      "type": "object",
      "description": "Database configuration",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["postgresql", "mysql", "supabase"],
          "description": "Database provider"
        }
      }
    },
    "deployment": {
      "type": "object",
      "description": "Deployment settings",
      "properties": {
        "environment": {
          "type": "string",
          "enum": ["development", "staging", "production"],
          "default": "development"
        },
        "docker": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "examples": [
    {
      "application": {
        "name": "Enterprise Dashboard",
        "version": "1.0.0",
        "description": "Enterprise application management system",
        "features": {
          "auth": true,
          "dashboard": true,
          "userManagement": true
        }
      },
      "database": {
        "type": "postgresql"
      },
      "deployment": {
        "environment": "development",
        "docker": true
      }
    }
  ]
} 